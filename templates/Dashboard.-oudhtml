      </div>
      </div>
  </div>

<div>
  <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
    <h1 class="page-header">Welcome {{username}},</h1>
  <canvas id="leerdoelenChart" style="width:100%;max-width:700px" ></canvas>
  <script METHOD = "GET" > 
    var xValues = ["Leerdoelen"];
    var yValues = ["{{count}}"];
    var barColors = ["red", "green"];

    
    new Chart("leerdoelenChart", {
      type: "bar",
      data: {
        labels: xValues,
        datasets: [{
          backgroundColor: barColors,
          data: yValues
        }]
      },
      options: {
        legend: {display: false},
        title: {
          display: true,
          text: "Leerdoelen"
        }
      }
    });
    </script>
      <canvas id="HTMLChart" style="width:100%;max-width:700px" ></canvas>
      <script METHOD = "GET" > 
        var xValues = ["<br>", "nbsp;"];
        var yValues = ["{{count2}}","{{count3}}"];
        var barColors = ["green","blue"];
    
        
        new Chart("HTMLChart", {
          type: "doughnut",
          data: {
            labels: xValues,
            datasets: [{
              backgroundColor: barColors,
              data: yValues
            }]
          },
          options: {
            legend: {display: false},
            title: {
              display: true,
              text: "HTML Fouten"
            }
          }
        });
        </script>
        </div>
</body>
</main>